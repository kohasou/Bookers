<h1>Books</h1>

  <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <a class="Show" href="/books">Show</a>
          </td>
          <td>
            <a class="edit" href="/books/edit">Edit</a>
          </td>
          <td>
            <a data-confirm="Are you sure?" class="destroy" rel="nofollow" data-method="delete" href="/books">Destroy</a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <h2>New book</h2>
  <%= form_with model: @book, url: '/books', method: :post  do |f| %>

  <div class="field">
    <h4 class="title">Title</h4>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <h4 class="body">Body</h4>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
  <% end %>
